        imagen_opencv = cv2.cvtColor(np.array(fotograma[6], dtype=np.uint8).reshape([alto, ancho, canales]), cv2.COLOR_RGB2BGR)
        cv2.imshow("Imagen de Pepper", imagen_opencv)
