    elif menu == 5:
        print("\nSettings\n1.Idioma\n2.Volumen\n3.Reboot\n4.Power off")
        menu_settings=input()
        if menu_settings == 1:
            print("\nLanguage\n1.Español\n2.English\n3.Cancel")
            menu_language=input()
            if menu_language==1:
                animated_speech_service.setLanguage("Spanish")
                pass
